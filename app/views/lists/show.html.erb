<h1><%= @list.name %></h1>

<% unless @list.bookmarks.empty? %>
  <% @list.bookmarks.each do |bookmark| %>
    <%= image_tag bookmark.movie.poster_url, alt: bookmark.movie.title, style:"border-radius: 25%; height:10em;" %>
    <h2><p><%= bookmark.movie.title %></p></h2>
    <p><%= bookmark.comment %></p>
  <% end %>
<% end %>

<%= link_to new_list_bookmark_path(@list) do %>
  <button>Ajoutez un film</button>
<% end %>

<div>
  <%= link_to "Toutes les listes", lists_path %>
</div>
